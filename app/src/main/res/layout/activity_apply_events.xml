<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#032535">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/camera"
            app:civ_border_width="6dp"
            app:civ_border_color="#6BC5D2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
        <!--College-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="College : "
            android:textSize="17sp"
            android:textColor="#007065"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/college_name"
            android:textSize="17sp"
            android:textColor="#00A79D"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="160dp"
            />

        <!--Event-Type-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Event Type : "
            android:textSize="17sp"
            android:textColor="#007065"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/event_type"
            android:textSize="17sp"
            android:textColor="#00A79D"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="160dp"
            />

        <!--Event Name-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Event Name : "
            android:textSize="17sp"
            android:textColor="#007065"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/event_name"
            android:textSize="17sp"
            android:textColor="#00A79D"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="160dp"
            />

        <!--Date of Event-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Event Date : "
            android:textSize="17sp"
            android:textColor="#007065"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/event_date"
            android:textSize="17sp"
            android:textColor="#00A79D"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="160dp"
            />

        <!--Venue of Event-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Venue : "
            android:textSize="17sp"
            android:textColor="#007065"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/event_venue"
            android:textSize="17sp"
            android:textColor="#00A79D"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="160dp"
            />

        <!--Event fee-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Registraton fee : "
            android:textSize="17sp"
            android:textColor="#007065"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/event_fee"
            android:textSize="17sp"
            android:textColor="#00A79D"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="180dp"
            />

        <!--Last Date to Apply-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Last Date to Apply : "
            android:textSize="17sp"
            android:textColor="#007065"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/event_lastDate"
            android:textSize="17sp"
            android:textColor="#00A79D"
            android:layout_marginTop="560dp"
            android:layout_marginLeft="195dp"
            />
        <!--Information-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Information : "
            android:textSize="17sp"
            android:textColor="#007065"
            android:layout_marginTop="620dp"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/event_Information"
            android:textSize="17sp"
            android:maxLines="4"
            android:lines="4"
            android:inputType="textMultiLine"
            android:textColor="#00A79D"
            android:layout_marginTop="620dp"
            android:layout_marginLeft="160dp"
            />
        <!--Apply Button-->
        <Button
            android:id="@+id/apply_btn"
            android:text="APPLY"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginTop="750dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>
</ScrollView>