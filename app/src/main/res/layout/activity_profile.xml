<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#032535">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profilepic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/camera"
            app:civ_border_width="6dp"
            app:civ_border_color="#6BC5D2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>








        <!--Name-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Name: "
            android:textSize="17sp"
            android:textColor="#007065"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="30dp"
            />


        <EditText
            android:id="@+id/nameofperson"
            android:layout_width="170dp"
            android:layout_height="45dp"

            android:textColor="#00A79D"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="160dp"/>


        <!--Email-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Email: "
            android:textColor="#007065"
            android:textSize="17sp"
            android:layout_marginTop="260dp"
            android:layout_marginLeft="30dp"
            />


        <EditText

            android:id="@+id/emailofperson"
            android:layout_width="190dp"
            android:layout_height="45dp"

            android:textColor="#00A79D"
            android:inputType="textEmailAddress"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="160dp"/>




        <!--Course-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Course: "

            android:textColor="#007065"
            android:textSize="17sp"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="30dp"
            />


        <EditText

            android:id="@+id/courseofperson"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:textColor="#00A79D"
            android:inputType="text"
            android:layout_marginTop="310dp"
            android:layout_marginLeft="160dp"/>

        <!--Place-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Place: "
            android:textColor="#007065"
            android:textSize="17sp"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="30dp"
            />


        <EditText

            android:id="@+id/placeofperson"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:inputType="text"
            android:textColor="#00A79D"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="160dp"/>


        <!--Call Details-->
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Call Details: "
            android:textColor="#007065"
            android:textSize="17sp"
            android:layout_marginTop="440dp"
            android:layout_marginLeft="30dp"
            />


        <EditText

            android:id="@+id/callofperson"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:textColor="#00A79D"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="160dp"/>

        <!--college type-->

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="College: "
            android:textColor="#007065"
            android:textSize="17sp"
            android:layout_marginTop="490dp"
            android:layout_marginLeft="30dp"
            />


        <EditText

            android:id="@+id/Collegename"
            android:layout_width="170dp"
            android:layout_height="45dp"
            android:inputType="text"
            android:textColor="#00A79D"
            android:layout_marginTop="490dp"
            android:layout_marginLeft="160dp"/>
        <!--Upload CV-->
        <Button
            android:id="@+id/upload_cv"
            android:text="Upload Cv"
            android:textColor="#E0FEFF"
            android:textSize="25sp"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="36dp"
            />

        <!--Register Button-->

        <Button
            android:id="@+id/register_person"
            android:text="REGISTER"
            android:textColor="#fff"
            android:textSize="30sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="45dp"
            />
    </RelativeLayout>
</ScrollView>